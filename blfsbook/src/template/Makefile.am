BOOKdir = @abs_bookdir@/template
EXTRA_DIST = template.ch
srcdir = @srcdir@
srcs = template.xml

SUFFIXES = .ch .xml
.ch.xml:
	$(top_builddir)/$(CTIE) -m $@ $(BOOKdir)/$@ $(srcdir)/$*.ch

all: ctie $(srcs)

ctie:
	cd $(top_builddir)/ctie && make ctie

template.xml: $(BOOKdir)/$@ $(srcdir)/template.ch
